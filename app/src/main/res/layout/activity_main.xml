<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lim.limquiz1.Activity.MainActivity"
    android:background="@drawable/background">

    <ListView
        android:id="@+id/list_AndroidVersions"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingBottom="30dp">
    </ListView>

    <Button
        android:id="@+id/donut_Button"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Donut"
        android:onClick="Donut"/>

    <Button
        android:id="@+id/froyo_Button"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/donut_Button"
        android:layout_toEndOf="@+id/donut_Button"
        android:text="Froyo"
        android:onClick="Froyo"/>

    <Button
        android:id="@+id/oreo_Button"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/froyo_Button"
        android:layout_toEndOf="@+id/froyo_Button"
        android:text="Oreo"
        android:onClick="Oreo"/>

</RelativeLayout>
